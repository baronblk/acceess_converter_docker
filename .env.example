# Environment variables for Access Database Converter

# Application settings
APP_NAME=Access Database Converter
APP_VERSION=2.0.0
DEBUG=false

# File upload settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=/app/data/uploads
EXPORT_DIR=/app/data/exports

# Job settings
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MINUTES=30
CLEANUP_INTERVAL_HOURS=1
MAX_JOB_AGE_HOURS=24

# Java/UCanAccess settings
JAVA_HEAP_SIZE=1024m
# UCANACCESS_CLASSPATH=/app/lib/ucanaccess-5.0.1.jar:/app/lib/...

# Logging settings
LOG_LEVEL=DEBUG
LOG_JSON=false
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=10485760  # 10MB in bytes
LOG_BACKUP_COUNT=5
