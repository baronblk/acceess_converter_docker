# Environment Configuration for Access Database Converter
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME="Access Database Converter"
APP_VERSION="1.0.0"
APP_ENV=development
DEBUG=true

# Server Settings
HOST=0.0.0.0
PORT=8000

# File Upload Settings
MAX_UPLOAD_MB=200
UPLOAD_PATH=./data/uploads
EXPORT_PATH=./data/exports
LOGS_PATH=./data/logs

# Redis/RQ Settings
REDIS_URL=redis://localhost:6379/0
JOB_TIMEOUT=3600

# UCanAccess Settings
UCANACCESS_PATH=/opt/ucanaccess

# Cleanup Settings
CLEANUP_AFTER_HOURS=24

# Security (generate your own secret key!)
SECRET_KEY=your-secret-key-here-change-this-in-production
AUTH_TOKEN=

# CORS Settings (adjust for your frontend URL)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
